{

    "compilerOptions": {

      "rootDir": "./src",
      "outDir": "./dist",
      "module": "commonjs",
      "target": "esnext",

      "lib": ["esnext"],
      "types": ["node"],

  

      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
  

      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
  

      "jsx": "react-jsx",
      "verbatimModuleSyntax": true,
      "isolatedModules": true,
      "noUncheckedSideEffectImports": true,
      "moduleDetection": "force",
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["tests/**/*", "node_modules", "dist", "coverage"]
  }